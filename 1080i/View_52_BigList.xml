<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<includes>
    <include name="View_52_BigList">
        <description>List View (id=52)</description>
        <control type="group">
            <include>Animation.Common</include>
            <visible>Control.IsVisible(52)</visible>
            <control type="list" id="52">
                <top>PosterPad</top>
                <left>180</left>
                <width>1570</width>
                <height>650</height>
                <onleft condition="!Skin.HasSetting(global.kioskmode)">9000</onleft>
                <onright>60</onright>
                <ondown>52</ondown>
                <onup>52</onup>
                <preloaditems>2</preloaditems>
                <pagecontrol>60</pagecontrol>
                <orientation>vertical</orientation>
                <viewtype label="537">list</viewtype>
                <scrolltime tween="quadratic">400</scrolltime>
                <itemlayout height="130" width="1570">
                    <control type="image">
                        <left>10</left>
                        <top>10</top>
                        <width>100</width>
                        <height>100</height>
                        <aspectratio scalediffuse="false">scale</aspectratio>
                        <texture diffuse="common/circle.png" background="true">$INFO[ListItem.Icon]</texture>
                        <visible>!Skin.HasSetting(global.hidecirles)</visible>
                    </control>
                    <control type="image">
                        <left>10</left>
                        <top>10</top>
                        <width>100</width>
                        <height>100</height>
                        <aspectratio scalediffuse="false">keep</aspectratio>
                        <texture background="true">$INFO[ListItem.Icon]</texture>
                        <visible>Skin.HasSetting(global.hidecirles)</visible>
                    </control>
                    <control type="label">
                        <left>130</left>
                        <top>10</top>
                        <right>40</right>
                        <height>100</height>
                        <aligny>center</aligny>
                        <font>SmallBold</font>
                        <textcolor>Dark1</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                    <control type="label">
                        <left>130</left>
                        <top>10</top>
                        <right>40</right>
                        <align>right</align>
                        <height>100</height>
                        <aligny>center</aligny>
                        <font>Small</font>
                        <textcolor>Dark1</textcolor>
                        <label>$INFO[ListItem.Label2]</label>
                    </control>
                </itemlayout>

                <focusedlayout height="130" width="1570">
                    <control type="image">
                        <left>0</left>
                        <right>10</right>
                        <height>120</height>
                        <texture border="5" colordiffuse="Dark1">common/box.png</texture>
                    </control>
                    <control type="image">
                        <left>10</left>
                        <top>10</top>
                        <width>100</width>
                        <height>100</height>
                        <aspectratio scalediffuse="false">scale</aspectratio>
                        <texture diffuse="common/circle.png" background="true">$INFO[ListItem.Icon]</texture>
                        <visible>!Skin.HasSetting(global.hidecirles)</visible>
                    </control>
                    <control type="image">
                        <left>10</left>
                        <top>10</top>
                        <width>100</width>
                        <height>100</height>
                        <aspectratio scalediffuse="false">keep</aspectratio>
                        <texture background="true">$INFO[ListItem.Icon]</texture>
                        <visible>Skin.HasSetting(global.hidecirles)</visible>
                    </control>
                    <control type="label">
                        <left>130</left>
                        <top>10</top>
                        <right>40</right>
                        <height>100</height>
                        <aligny>center</aligny>
                        <font>SmallBold</font>
                        <textcolor>Light1</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                    <control type="label">
                        <left>130</left>
                        <top>10</top>
                        <right>40</right>
                        <align>right</align>
                        <height>100</height>
                        <aligny>center</aligny>
                        <font>Small</font>
                        <textcolor>Light1</textcolor>
                        <label>$INFO[ListItem.Label2]</label>
                    </control>
                </focusedlayout>
            </control>
            <control type="group">
                <animation effect="slide" start="-100" end="-100" condition="true">Conditional</animation>
                <include>Furniture_Scrollbar</include>
            </control>
        </control>
    </include>

</includes>
 
