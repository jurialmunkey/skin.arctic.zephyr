<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="2003">
    <defaultcontrol always="true">9000</defaultcontrol>
    <allowoverlay>no</allowoverlay>

    <controls>

        <include>GlobalOverlay</include>

        <control type="group">
            <include>DefDialogInfoPanel</include>

            <control type="image">
                <posx>30</posx>
                <top>100</top>
                <width>450</width>
                <height>274</height>
                <aspectratio scalediffuse="false">scale</aspectratio>
                <texture diffuse="diffuse/pvrinfo.png">pvr/background.jpg</texture>
                <visible>IsEmpty(ListItem.Thumb)</visible>
            </control>
            <control type="image">
                <posx>30</posx>
                <top>100</top>
                <width>450</width>
                <height>274</height>
                <aspectratio scalediffuse="false">keep</aspectratio>
                <texture diffuse="diffuse/pvrinfo.png">$INFO[ListItem.Thumb]</texture>
                <visible>!IsEmpty(ListItem.Thumb)</visible>
            </control>
            
            <control type="label">
                <description>Header Label</description>
                <include>DefDialogInfoHeader</include>
                <label>$INFO[ListItem.Title]$INFO[ListItem.Year, (,)]</label>
            </control>
            
            <control type="grouplist">
                <left>510</left>
                <right>30</right>
                <posy>112</posy>
                <orientation>vertical</orientation>
                <usecontrolcoords>true</usecontrolcoords>
                
                <!-- Channel Name -->
                <control type="label">
                    <width>100%</width>
                    <height>25</height>
                    <font>SmallBold</font>
                    <label>19029</label>
                    <aligny>center</aligny>
                </control>
                <control type="label">
                    <width>100%</width>
                    <height>60</height>
                    <font>Tiny</font>
                    <aligny>top</aligny>
                    <label>$INFO[ListItem.ChannelName]$INFO[ListItem.ChannelNumber, (,)]</label>
                </control>

                <!-- Start Time -->
                <control type="label">
                    <width>100%</width>
                    <height>25</height>
                    <font>SmallBold</font>
                    <label>19126</label>
                    <aligny>center</aligny>
                </control>
                <control type="label">
                    <width>100%</width>
                    <height>60</height>
                    <font>Tiny</font>
                    <aligny>top</aligny>
                    <label>$INFO[ListItem.StartDate] - $INFO[ListItem.StartTime]</label>
                </control>
                
                <!-- Run Time -->
                <control type="label">
                    <width>100%</width>
                    <height>25</height>
                    <font>SmallBold</font>
                    <label>2050</label>
                    <aligny>center</aligny>
                </control>
                <control type="label">
                    <width>100%</width>
                    <height>60</height>
                    <font>Tiny</font>
                    <aligny>top</aligny>
                    <label>$INFO[ListItem.Duration,, $LOCALIZE[12391]]</label>
                </control>
                
                <!-- Studio -->
                <control type="label">
                    <width>100%</width>
                    <height>25</height>
                    <font>SmallBold</font>
                    <label>573</label>
                    <aligny>center</aligny>
                </control>
                <control type="label">
                    <width>100%</width>
                    <height>60</height>
                    <font>Tiny</font>
                    <aligny>top</aligny>
                    <label>$INFO[ListItem.FileNameAndPath]</label>
                </control>

                <!-- Plot -->
                <control type="label">
                    <width>100%</width>
                    <height>25</height>
                    <font>SmallBold</font>
                    <label>207</label>
                    <aligny>center</aligny>
                </control>
                <control type="textbox">
                    <width>100%</width>
                    <height>278</height>
                    <font>Tiny</font>
                    <label>$INFO[ListItem.Plot]</label>
                    <align>justify</align>
                </control>
            </control>


            <control type="grouplist" id="9000">
                <posx>30</posx>
                <width>450</width>
                <height>423</height>
                <bottom>33</bottom>
                <itemgap>3</itemgap>
                <onup>9000</onup>
                <ondown>9000</ondown>
                <onright>50</onright>
                <onleft>50</onleft>
                <orientation>vertical</orientation>

                <control type="button" id ="10">
                    <description>Ok</description>
                    <label>186</label>
                    <width>450</width>
                    <height>68</height>
                    <texturenofocus colordiffuse="Black12" border="5">common/box.png</texturenofocus>
                    <texturefocus colordiffuse="$VAR[ColourHighlight]" border="5">common/box.png</texturefocus>
                    <include>DefDialogButtons</include>>
                </control>
            </control>
        </control>

    </controls>

</window>
