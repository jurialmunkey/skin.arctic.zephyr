            <left>0</left>
            <right>10</right>
            <height>48</height>
            <bottom>10</bottom>
            <texture colordiffuse="Highlight">common/white.png</texture>
        </control>
        <control type="label">
            <left>20</left>
            <right>30</right>
            <height>48</height>
            <bottom>10</bottom>
            <align>left</align>
            <font>TinyBold</font>
            <textcolor>White100</textcolor>
            <label>$INFO[ListItem.Label]</label>
        </control>
    </include>
    <include name="GlobalSearchList">
        <posy>50</posy>
        <height>220</height>
        <width>1712</width>
        <orientation>horizontal</orientation>
        <itemlayout height="220" width="428">
            <include>GlobalSearchListItem</include>
        </itemlayout>
    </include>
    
    
