<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="2008">
    <defaultcontrol always="true">450</defaultcontrol>
    <allowoverlay>no</allowoverlay>

    <controls>

        <include>GlobalOverlay</include>

        <control type="group">
            <width>700</width>
            <height>400</height>
            <include>DefDialogInfoPanel</include>
            
            <control type="label">
                <description>Header Label</description>
                <centerleft>50%</centerleft>
                <width>1000</width>
                <align>center</align>
                <label>$INFO[ListItem.Label]</label>
                <posy>15</posy>
                <font>MediumBold</font>
            </control>

            <control type="list" id="450">
                <posx>15</posx>
                <posy>100</posy>
                <width>670</width>
                <height>276</height>
                <onup>4</onup>

                <itemlayout height="69" width="670">

                    <control type="label">
                        <posx>20</posx>
                        <width>810</width>
                        <info>ListItem.Label</info>
                    </control>

                    <control type="label">
                        <right>20</right>
                        <width>810</width>
                        <align>right</align>
                        <font>Tiny</font>
                        <info>ListItem.Label2</info>
                    </control>

                </itemlayout>

                <focusedlayout height="69" width="670">
                    <control type="group">
                        
                        <visible>Control.HasFocus(450)</visible>
                        <control type="image">
                            <width>100%</width>
                            <height>66</height>
                            <texture border="5" colordiffuse="$VAR[ColourHighlight]">common/box.png</texture>
                        </control>

                        <control type="label">
                            <posx>20</posx>
                            <width>810</width>
                            <textcolor>White100</textcolor>
                            <info>ListItem.Label</info>
                        </control>

                        <control type="label">
                            <right>20</right>
                            <width>810</width>
                            <align>right</align>
                            <font>Tiny</font>
                            <textcolor>White100</textcolor>
                            <info>ListItem.Label2</info>
                        </control>
                    </control>
                    <control type="group">
                        <visible>!Control.HasFocus(450)</visible>
                        <control type="label">
                            <posx>20</posx>
                            <width>810</width>
                            <info>ListItem.Label</info>
                        </control>

                        <control type="label">
                            <right>20</right>
                            <width>810</width>
                            <align>right</align>
                            <font>Tiny</font>
                            <info>ListItem.Label2</info>
                        </control>
                    </control>

                </focusedlayout>

            </control>


        </control>

    </controls>

</window>
